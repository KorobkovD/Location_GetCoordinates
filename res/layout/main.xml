<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/background" android:weightSum="1"
    android:id="@+id/mainLayout">

    <TextView
    android:id="@+id/text" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="" 
    android:textStyle="bold" 
    android:layout_margin="10px" android:textColor="#ffffff" android:layout_row="0" android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2" android:layout_row="1" android:layout_column="0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_gravity="center_horizontal"
            android:textColor="#000000" android:password="false" android:hint="Введите комментарий..."
            android:layout_row="3" android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Данные отправляются по адресу: \n http://212.192.134.20/u2014-35-2-korobkov-denis.kubsu-dev.ru/results"
            android:id="@+id/textView" android:textColor="#ffffff" android:layout_row="4" android:layout_column="0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:text="Отправить на сервер"
            android:layout_row="5" android:layout_column="0"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editPhone" android:layout_gravity="center_horizontal" android:hint="Введите получателя (+7)"
            android:layout_row="6" android:layout_column="0"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить по SMS"
            android:id="@+id/buttonSMS" android:layout_gravity="center|top" android:onClick="sendSMS"
            android:focusable="false" android:layout_row="7" android:layout_column="0"/>

</GridLayout>